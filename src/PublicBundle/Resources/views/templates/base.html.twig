<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>E-lyc√©e{% if title is not null %} | {{ title }}{% endif %}</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="{{ asset('css/app-home.css') }}" />
  <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
  <link href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  {% include "PublicBundle::includes/navbar.html.twig" %}
  {% include "PublicBundle::includes/messages.html.twig" %}

  <main class="mdl-layout__content mdl-color--grey-100">
    <div class="base-wrapper">
      <div class="cards-container">
        {% block mainContent %}{% endblock %}
      </div>
      <aside class="sidebar mdl-shadow--2dp">
        {% include "PublicBundle::includes/sidebar.html.twig" %}
      </aside>
    </div>
    {% include "PublicBundle::includes/footer.html.twig" %}
  </main>

  <div class="modal" id="modal">
    <button class="modal-closeBtn js-modalSwitch mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect"><i class="material-icons">close</i></button>
    <div class="modal-content" id="modalContent"></div>
  </div>
  <div class="overlay" id="overlay"></div>

  {% block javascripts %}{% endblock %}
    <script type='text/javascript' src="{{ asset('dev/js/material.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>

    <script src="{{ asset('dev/js/signin.js') }}"></script>
    <script src="{{ asset('dev/js/notification.js') }}"></script>
    <script>
      var signin = SignIn;
      signin.init();

      var notif = Notification;
      notif.init();
    </script>

  {% if browser_sync == true %}
    <script type='text/javascript' id="__bs_script__">//<![CDATA[
      document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.2.7.13.js'><\/script>".replace("HOST", location.hostname));
      //]]>
    </script>
  {% endif %}

  <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
  <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
</body>

</html>
