{% extends "PublicBundle::base.html.twig" %}

{% block mainContent %}


  <div class="news-wrapper">

    {% for post in results %}
      <div class="news-item">
        <a href="{{ url('public.news.article', {'id': post.id}) }}" class="news-itemThumb" style="background-image: url('{{ post.urlThumbnail }}');"></a>
        <div class="news-itemDetails">
          <h3 class="news-itemTitle">{{ post.title }}</h3>
          <p class="news-itemInfo">Post√© le <strong>{{ post.createAt.date | date('d M Y')}}</strong> par <strong>{{ post.auteur }}</strong>
          <p>{{ post.extract }} | <a href="{{ url('public.news.article', {'id': post.id}) }}">Lire la suite</a></p>
        </div>
      </div>
    {% endfor %}

  </div>

{% endblock %}
